{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb-typescript",
    "plugin:sonarjs/recommended",
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/jsx-runtime",
    "prettier"
  ],
  "plugins": [
    "sonarjs",
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-var": 2,
    "import/named": 0,
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "@typescript-eslint/no-empty-interface": [
      "error",
      {
        "allowSingleExtends": true
      }
    ],
    "react/no-unknown-property": ["error", { "ignore": ["p-id"] }],
    // 不用改
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-use-before-define": 0,
    "@typescript-eslint/interface-name-prefix": 0,
    "@typescript-eslint/explicit-member-accessibility": 0,
    "@typescript-eslint/array-type": 0,
    "no-extra-boolean-cast": 0,
    "react/display-name": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/mouse-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-first-prop-new-line": 0,
    "react/no-access-state-in-setstate": 0,
    "react/jsx-wrap-multilines": 0,
    "import/order": 0,
    "react/jsx-no-target-blank": 0,
    "react/no-danger": 0,
    // 不太好改
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-closing-tag-location": 0,
    "react/no-array-index-key": 0,
    // 可以改 但是也不一定要改
    "react/prop-types": 0,
    "@typescript-eslint/camelcase": 0,
    "no-case-declarations": 0,
    "react/jsx-one-expression-per-line": 0,
    "import/newline-after-import": 0,
    "no-console": 1,
    "react/jsx-boolean-value": [
      "error",
      "always"
    ],
    "import/no-named-as-default": 0,
    "no-control-regex": 0,
    "react/sort-comp": 0,
    "react/no-unused-state": 0,
    "import/no-cycle": 0,
    "react/jsx-max-props-per-line": 0,
    "react/no-did-update-set-state": 0,
    "react/button-has-type": 0,
    "react/jsx-no-bind": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "label-has-associated-control": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "jsx-a11y/label-has-for": 0,
    "semi": [
      "error",
      "always"
    ],
    "@typescript-eslint/semi": 0,
    "import/prefer-default-export": 0, // 只有一个 export 的时候 用 export default
    "no-useless-escape": 0,
    "react-hooks/rules-of-hooks": 2, // 检查 Hook 的规则
    "react-hooks/exhaustive-deps": 0, // 检查 effect 的依赖
    "sonarjs/no-duplicate-string": 0
  }
}